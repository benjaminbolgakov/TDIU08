#include <iostream>
#include <string>
#include <sstream>
#include <iomanip>
#include <cmath>
using namespace std;

int main()
{
  int wNumber;
  float fNumber;
  string listNumbers;
  char character;

  /*
  */
  cout << "Enter an integer value: ";
  cin >> fNumber;
  cout << "You entered the number: " << floor(fNumber) << endl;
  cin.ignore();
  
  cout << "Enter five integer values: ";
  cin >> wNumber;
  // getline(cin, listNumbers);
  cout << "You entered: " << wNumber << endl;

  //  cin.ignore();
  cout << "Skriv in ett flyttal: ";
  cin >> fNumber;
  cout << fixed << setprecision(3) << fNumber << endl;

  cout << "Enter an integer and a floating point value: ";
  cin >> wNumber;
  cin >> fNumber;
  cout << "You entered integer value: " << setw(16) << wNumber << endl;
  cout << "You entered the floating value: " << setprecision(4) << setw(8) << fNumber << endl;

  cout << "Enter a character: ";
  cin >> character;
  cout << "You entered the character: " << character << endl;

  cout << "Enter a word: ";
  cin >> listNumbers;
  cout << "You entered the word: " << listNumbers << endl;

  cout << "Enter an integer value and a word: ";
  cin >> wNumber;
  cin >> listNumbers;
  cout << "You entered the number " << wNumber << " and the word: " << listNumbers << endl;
  
  cout << "Enter a line of text: ";
  getline(cin, listNumbers);
  cout << "You entered: " << listNumbers << endl;

  cout << "Enter another line: ";
  getline(cin, listNumbers);
  cout << "You entered: " << listNumbers << endl;
  
  return 0;
}
